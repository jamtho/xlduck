<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="OnRibbonLoad">
  <ribbon>
    <tabs>
      <tab id="XlDuckTab" label="XLDuck">
        <group id="PreviewGroup" label="Preview">
          <toggleButton id="PreviewPaneToggle"
                        label="Preview Pane"
                        size="large"
                        imageMso="FindDialog"
                        onAction="OnPreviewPaneToggle"
                        getPressed="GetPreviewPanePressed"
                        screentip="Toggle Preview Pane"
                        supertip="Show or hide the preview pane that displays handle contents." />
        </group>
        <group id="QueryGroup" label="Query">
          <toggleButton id="QueryPauseToggle"
                        label="Pause Queries"
                        size="large"
                        imageMso="Pause"
                        onAction="OnQueryPauseToggle"
                        getPressed="GetQueryPaused"
                        screentip="Pause/Resume Queries"
                        supertip="Pause all query execution. Queries resume when toggled off." />
          <button id="CancelQueryButton" label="Cancel Query"
                  imageMso="CancelRequest" size="large"
                  onAction="OnCancelQuery"
                  screentip="Cancel Running Query"
                  supertip="Cancels the running query and all pending queries." />
        </group>
        <group id="InfoGroup" label="Info">
          <button id="VersionButton"
                  label="Version"
                  size="normal"
                  imageMso="Info"
                  onAction="OnVersionClick"
                  screentip="Show XLDuck Version"
                  supertip="Display the XLDuck add-in and DuckDB library versions." />
        </group>
      </tab>
    </tabs>
  </ribbon>
</customUI>
